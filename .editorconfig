root = true

[*]
indent_style = space
indent_size = 2
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.py]
indent_size = 4

[*.java]
indent_size = 4
continuation_indent_size = 8

[*.xml]
indent_size = 4

[*.sh]
end_of_line = lf

[*.md]
trim_trailing_whitespace = false
